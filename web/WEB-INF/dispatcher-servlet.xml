<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>

    <!--
    Most controllers will use the ControllerClassNameHandlerMapping above, but
    for the index controller we are using ParameterizableViewController, so we must
    define an explicit mapping for it.
    -->
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="index.htm">indexController</prop>
                <prop key="seeAllOrders.htm">seeAllOrdersController</prop>
                <prop key="newOrders.htm">newOrdersController</prop>
                <prop key="editOrder.htm">editOrderController</prop>
                <prop key="choosePaymentOption.htm">choosePaymentOptionController</prop>
                <prop key="login.htm">loginController</prop>
                <prop key="signup.htm">signUpController</prop>
                <prop key="editCustomers.htm">editCustomersController</prop>
                <prop key="CreditCardAdminUI.htm">CreditCardAdminController</prop>
                <prop key="CreditCardUserUI.htm">CreditCardUserController</prop>                
                   <prop key="CreditCardAdminUI1.htm">CreditCardAdminController1</prop>                
                   <prop key="CreditCardAdminUI11.htm">CreditCardAdminController11</prop>                
                   <prop key="CreditCardAdminUI2.htm">CreditCardAdminController2</prop>                
                   <prop key="CreditCardAdminUI22.htm">CreditCardAdminController22</prop>                
                   <prop key="CreditCardAdminUI3.htm">CreditCardAdminController3</prop>                
                   <prop key="CreditCardAdminUI33.htm">CreditCardAdminController33</prop>                
                   <prop key="CreditCardAdminUI4.htm">CreditCardAdminController4</prop>                
                   <prop key="CreditCardAdminUI5.htm">CreditCardAdminController5</prop>                                
                   <prop key="CreditCardUserUI1.htm">CreditCardUserController1</prop>                
            </props>
        </property>
    </bean>

    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/jsp/"
          p:suffix=".jsp" />

    <!--
    The index controller.
    -->
    <bean name="indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="index" />
    
    <bean name="newOrdersController"
          class="Controller.NewOrdersController"
          p:ordersDAO-ref="ordersDAO"/>
    
    <bean name="choosePaymentOptionController"
          class="Controller.ChoosePaymentOption" 
          p:pkgOrderDAO-ref="pkgOrderDAO"/>
          
    
    <bean name="editOrderController"
          class="Controller.EditOrderController"
          p:ordersDAO-ref="ordersDAO" />
    
    <bean name="seeAllOrdersController"
          class="Controller.SeeAllOrdersController"
          p:ordersDAO-ref="ordersDAO" />
       
     <!-- CustomerAccount Controllers -->
     <bean name="loginController"
          class="Controller.LoginController"
          p:formView="login"
          p:validator-ref="userValidator"
          p:userDAO-ref="userDAO"
    />
       
    <bean name="signUpController"
          class="Controller.SignupController"
          p:formView="signup"
          p:validator-ref="newUserValidator"
          p:userDAO-ref="userDAO"
    />
       
    <bean name="editCustomersController"
          class="Controller.EditCustomersController"
          p:formView="editCustomers"
          p:userDAO-ref="userDAO"
    />
    <!-- End of CustomerAccount Controllers -->
       
    <!-- Bean for CustomerAccount Controllers -->
    <bean name="userDAO" class="Service.UserDAOImpl"/>
    <bean name="pkgOrderDAO" class="Service.PkgOrderDAOImpl" />
    <bean name="ordersDAO" class="Service.OrdersDAOImpl" />

    <!-- Validators for CustomerAccount Login/Registration -->
    <bean id="userValidator" class="Validator.UserValidator" />
    <bean id="newUserValidator" class="Validator.NewUserValidator" />
       
       <bean name="CreditCardAdminController"
             class="Controller.Credit.CreditCardAdminController"
             p:formView="CreditCardAdminUI"
             p:validator-ref="CreditValidator" />        
    
    <bean name="CreditCardAdminController1"          class="Controller.Credit.CreditCardAdminController1"          p:formView="CreditCardAdminUI1"              p:validator-ref="CreditCardAdmin1Validator" />        <bean name="CreditCardAdminController11"          class="Controller.Credit.CreditCardAdminController11"          p:formView="CreditCardAdminUI11"          />    <bean name="CreditCardAdminController2"          class="Controller.Credit.CreditCardAdminController2"          p:formView="CreditCardAdminUI2"          p:validator-ref="CreditCardAdmin2Validator"    />        <bean name="CreditCardAdminController22"          class="Controller.Credit.CreditCardAdminController22"          p:formView="CreditCardAdminUI22"          />        <bean name="CreditCardAdminController3"          class="Controller.Credit.CreditCardAdminController3"          p:formView="CreditCardAdminUI3"          p:validator-ref="CreditCardAdmin3Validator"    />        <bean name="CreditCardAdminController33"          class="Controller.Credit.CreditCardAdminController33"          p:formView="CreditCardAdminUI33"          />    <bean name="CreditCardAdminController4"          class="Controller.Credit.CreditCardAdminController4"          p:formView="CreditCardAdminUI4"          p:validator-ref="CreditCardAdmin4Validator"    />        <bean name="CreditCardAdminController5"          class="Controller.Credit.CreditCardAdminController5"          p:formView="CreditCardAdminUI5"          p:validator-ref="CreditCardAdmin5Validator"    />        <bean name="CreditCardUserController1"          class="Controller.Credit.CreditCardUserController1"          p:formView="CreditCardUserUI1"          p:validator-ref="CreditCardUser1Validator"    />            <bean name="CreditCardUserController"          class="Controller.Credit.CreditCardUserController"          p:formView="CreditCardUserUI" />        <bean name="CreditCardDAOImpl" class="DAO.Credit.CreditCardDAOImpl" />        <bean id="CreditValidator" class="Validator.Credit.CreditValidator" />    <bean id="CreditCardAdmin1Validator" class="Validator.Credit.CreditCardAdmin1Validator" />    <bean id="CreditCardAdmin2Validator" class="Validator.Credit.CreditCardAdmin2Validator" />    <bean id="CreditCardAdmin3Validator" class="Validator.Credit.CreditCardAdmin3Validator" />    <bean id="CreditCardAdmin4Validator" class="Validator.Credit.CreditCardAdmin4Validator" />    <bean id="CreditCardAdmin5Validator" class="Validator.Credit.CreditCardAdmin5Validator" />    <bean id="CreditCardUser1Validator" class="Validator.Credit.CreditCardUser1Validator" />    
</beans>
